<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('partials/head', {title: 'Error ' + error.status}) %>
    <link rel="stylesheet" href="/css/error.css">
  </head>
  <body class="js-head-offset head-offset">
    <%- include('partials/header') %>
    <main style="display: inline-block;">
      <% if(error.status == 404){ %>
      <figure>
        <div class="sad-mac"></div>
        <figcaption>
          <span class="sr-text">Error 404: Pagina no encontrada</span>
          <span class="e"></span>
          <span class="r"></span>
          <span class="r"></span>
          <span class="o"></span>
          <span class="r"></span>
          <span class="_4"></span>
          <span class="_0"></span>
          <span class="_4"></span>
          <span class="n"></span>
          <span class="o"></span>
          <span class="t"></span>
          <span class="f"></span>
          <span class="o"></span>
          <span class="u"></span>
          <span class="n"></span>
          <span class="d"></span>
        </figcaption>
      </figure>
      <% } else { %>
      <style>
        h2, h3, p, i, pre { color: #fff; }
      </style>
      <h2><%= message %></h2>
	    <h3><%= error.status %></h3>
	    <p>Error trying to access to: <b><%= path %></b></p>
	    <pre><i><%= error.stack %></i></pre>
      <% } %>
    </main>
    <%- include('partials/footer') %>
    <script src="/js/header.js"></script>
  </body>
</html>